@font-face {
    font-family: roboto;
    src: url(/static/res/RobotoCondensed-Light.ttf);
}

body {
    background: linear-gradient(to top, rgb(200,200,200) 0%, rgb(255,255,255) 50%) fixed;
    font-family: roboto, sans-serif;
    margin: 0px;
    padding: 0px;
}

p, li, td { font-size: 14px; }

a:link { color: rgb(80,80,180); text-decoration: none; }
a:visited { color: rgb(140,80,140); text-decoration: none; }
a:focus, a:hover { color: rgb(50,50,50); text-decoration: underline; }

section { display: block; }
    #body-no-homepage #section-summary > div {
        background: rgb(255,255,255);
        border: 1px rgb(200,200,200) solid;
        margin: 10px 40px;
        padding: 10px;
    }
        #body-no-homepage #section-summary h3 { margin: 0px; padding: 10px 0px; }
        #body-no-homepage #section-summary p { margin: 0px; }
        #body-no-homepage #section-summary .section-image {
            border: 1px rgb(200,200,200) solid;
            float: left;
            height: 200px;
            margin-right: 15px;
            overflow: hidden;
            width: 200px;
        }
    section > h2 { left: -1000px; margin: 0px; position: absolute; top: -1000px; }


.clearer { clear: both; }
.paginator-nav {
    color: rgb(100,100,100);
    clear: both;
    text-align: center;
}
    .paginator-nav > span, .paginator-nav > a {
        margin: 0px 10px;
    }
    .paginator-nav > :nth-child(2):before, .paginator-nav > :nth-child(2):after {
        content: " | ";
        margin: 0px 10px;
    }
    .paginator-nav > :first-child:before {
        content: "⯇ ";
        margin-right: 5px;
    }
    .paginator-nav > :last-child:after {
        content: " ⯈";
        margin-left: 5px;
    }
.site-nav {
    list-style-type: none;
    padding: 0px;
}
    .site-nav li {
        display: inline-block;
        font-size: 16px;
        margin: 5px 10px;
        padding: 5px 10px;
    }


#site-header {
    background: rgb(0,0,0);
    color: rgb(255,255,255);
    padding: 10px 40px 0px 40px;
}
    #site-header h1 { font-size: 22px; font-weight: normal; margin: 0px; }
    #site-header h1 small { letter-spacing: 4px; text-transform: uppercase; }
    #site-header a { color: rgb(200,200,100); }

#site-footer {
    clear: both;
    padding: 20px 10px;
    text-align: center;
}
    #site-footer p {
        font-size: 10px;
        line-height: 15px;
        margin: 0px 0px 14px 0px;
    }



